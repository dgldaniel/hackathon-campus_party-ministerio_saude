<%= form_with(model: procedure_sheet, id: 'regForm', class: 'form-wizard') do |form| %>
  <% if procedure_sheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(procedure_sheet.errors.count, "error") %> prohibited this procedure_sheet from being saved:</h2>
      <ul>
        <% procedure_sheet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tab">
    <div class="field">
      <%= form.label :uuidFicha %>
      <%= form.text_field :uuidFicha %>
    </div>
    <div class="field">
      <%= form.label :tpCdsOrigem %>
      <%= form.number_field :tpCdsOrigem %>
    </div>
    <div class="field">
      <%= form.label :numTotalAfericaoPa %>
      <%= form.number_field :numTotalAfericaoPa %>
    </div>
    <div class="field">
      <%= form.label :numTotalAfericaoTemperatura %>
      <%= form.number_field :numTotalAfericaoTemperatura %>
    </div>
    <div class="field">
      <%= form.label :numTotalCurativoSimples %>
      <%= form.number_field :numTotalCurativoSimples %>
    </div>
    <div class="field">
      <%= form.label :numTotalColetaMaterialParaExameLaboratorial %>
      <%= form.number_field :numTotalColetaMaterialParaExameLaboratorial %>
    </div>
    <div class="field">
      <%= form.label :numTotalGlicemiaCapilar %>
      <%= form.number_field :numTotalGlicemiaCapilar %>
    </div>
    <div class="field">
      <%= form.label :numTotalMedicaoAltura %>
      <%= form.number_field :numTotalMedicaoAltura %>
    </div>
    <div class="field">
      <%= form.label :numTotalMedicaoPeso %>
      <%= form.number_field :numTotalMedicaoPeso %>
    </div>
  </div>
  <div class="tab">
    <div id="care-procedures">
      <%= form.fields_for :care_procedures do |care_procedure| %>
        <%= render 'care_procedure_fields', f: care_procedure %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add care procedure', form, :care_procedures %>
        <br>
        <br>
      </div>
    </div>
  </div>
  <div class="text-end btn-mb">
    <button class="btn btn-warning" id="prevBtn" type="button">Anterior</button>
    <button class="btn btn-primary" id="nextBtn" type="button">Pr√≥ximo</button>
    <%= form.submit "Registrar Ficha de Procedimento", class: "btn btn-success", id: 'submitBtn', style: "display:none" %>
  </div>
  <div class="text-center">
    <span class="step"></span>
    <span class="step"></span>
  </div>
<% end %>
