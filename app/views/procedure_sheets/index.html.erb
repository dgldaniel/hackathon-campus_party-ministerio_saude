<div class="col-sm-12">
  <div class="card">
    <div class="card-header">
      <h4>Ficha de Procedimentos</h4>
      <p id="notice"><%= notice %></p>
    </div>
    <div class="card-body">
      <% if @procedure_sheets.empty? %>
        <h5>Sem Registros</h5>
      <% end %>
      <% unless @procedure_sheets.empty? %>
        <div class="table-responsive">
          <table class="display" id="API-2">
            <thead>
              <tr>
                <th>Uuidficha</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @procedure_sheets.each do |procedure_sheet| %>
                <tr>
                  <td><%= procedure_sheet.uuidFicha %></td>
                  <td>
                    <%= link_to procedure_sheet do %>
                      <i class="fa fa-eye fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_procedure_sheet_path(procedure_sheet) do %>
                      <i class="fa fa-edit fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to procedure_sheet, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-trash fa-2x"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <br>
      <%= link_to 'Nova Ficha de Procedimento', new_procedure_sheet_path, id: "addRow", class: 'btn btn-primary mb-3' %>
    </div>
  </div>
</div>
