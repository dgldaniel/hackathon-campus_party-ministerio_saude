<p id="notice"><%= notice %></p>

<h1>Procedure Sheets</h1>

<%= form_with url: generate_xml_zip_path, method: :get, local: false do |form| %>
  <h2>Gerar Zip</h2>

  <%= form.label :start_date, "Data de Inicio" %>
  <%= form.date_field :start_date %>

  <%= form.label :end_date, "Data Final" %>
  <%= form.date_field :end_date %>

  <br>

  <%= form.submit "Gerar" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Uuidficha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedure_sheets.each do |procedure_sheet| %>
      <tr>
        <td><%= procedure_sheet.uuidFicha %></td>
        <td><%= link_to 'Show', procedure_sheet %></td>
        <td><%= link_to 'Edit', edit_procedure_sheet_path(procedure_sheet) %></td>
        <td><%= link_to 'Destroy', procedure_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Procedure Sheet', new_procedure_sheet_path %>
