<div class="col-sm-12">
  <div class="card">
    <div class="card-header">
      <h4>Atendimento Individual</h4>
      <p id="notice"><%= notice %></p>
    </div>
    <div class="card-body">
      <% if @individual_calls.empty? %>
        <h5>Sem Registros</h5>
      <% end %>
      <% unless @individual_calls.empty? %>
        <div class="table-responsive">
          <table class="display" id="API-2">
            <thead>
              <tr>
                <th>Numeroprontuario</th>
                <th>Cnscidadao</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @individual_calls.each do |individual_call| %>
                <tr>
                  <td><%= individual_call.numeroProntuario %></td>
                  <td><%= individual_call.cnsCidadao %></td>
                  <td>
                    <%= link_to individual_call do %>
                      <i class="fa fa-eye fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_individual_call_path(individual_call) do %>
                      <i class="fa fa-edit fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to individual_call, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-trash fa-2x"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <br>
      <%= link_to 'Novo Atendimento Individual', new_individual_call_path, id: "addRow", class: 'btn btn-primary mb-3' %>
    </div>
  </div>
</div>
