<div class="col-sm-12">
  <div class="card">
    <div class="card-header">
      <h4>Ficha de Atividade Coletiva</h4>
      <p id="notice"><%= notice %></p>
    </div>
    <div class="card-body">
      <% if @collective_activity_sheets.empty? %>
        <h5>Sem Registros</h5>
      <% end %>
      <% unless @collective_activity_sheets.empty? %>
        <div class="table-responsive">
          <table class="display" id="API-2">
            <thead>
              <tr>
                <th>Uuidficha</th>
                <th>Inep</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @collective_activity_sheets.each do |collective_activity_sheet| %>
                <tr>
                  <td><%= collective_activity_sheet.uuidFicha %></td>
                  <td><%= collective_activity_sheet.inep %></td>
                  <td>
                    <%= link_to collective_activity_sheet do %>
                      <i class="fa fa-eye fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_collective_activity_sheet_path(collective_activity_sheet) do %>
                      <i class="fa fa-edit fa-2x"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to collective_activity_sheet, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-trash fa-2x"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <br>
      <%= link_to 'Nova Atividade Coletiva', new_collective_activity_sheet_path, id: "addRow", class: 'btn btn-primary mb-3' %>
    </div>
  </div>
</div>
