<div class="container-fluid general-widget">
  <div class="row">
    <div class="col-sm-6 col-xl-3 col-lg-6">
      <%= link_to individual_registrations_path do %>
        <div class="card o-hidden border-0">
          <div class="bg-primary b-r-4 card-body">
            <div class="media static-top-widget">
              <div class="align-self-center text-center"><i data-feather="user-plus"></i></div>
              <div class="media-body"><span class="m-0">Cadastro</span>
                <h4 class="mb-0 counter">Individual</h4>
                <i class="icon-bg" data-feather="user-plus"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6 col-xl-3 col-lg-6">
      <%= link_to household_registrations_path do %>
        <div class="card o-hidden border-0">
          <div class="bg-primary b-r-4 card-body">
            <div class="media static-top-widget">
              <div class="align-self-center text-center"><i data-feather="home"></i></div>
              <div class="media-body"><span class="m-0">Cadastro</span>
                <h4 class="mb-0 counter">Domiciliar</h4>
                <i class="icon-bg" data-feather="home"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6 col-xl-3 col-lg-6">
      <div class="card o-hidden border-0">
        <div class="bg-secondary b-r-4 card-body">
          <div class="media static-top-widget">
            <div class="align-self-center text-center"><i data-feather="user-check"></i></div>
            <div class="media-body"><span class="m-0">Atendimento</span>
              <h4 class="mb-0 counter">Individual</h4>
              <i class="icon-bg" data-feather="user-check"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-xl-3 col-lg-6">
      <%= link_to procedure_sheets_path do %>
        <div class="card o-hidden border-0">
          <div class="bg-primary b-r-4 card-body">
            <div class="media static-top-widget">
              <div class="align-self-center text-center"><i data-feather="activity"></i></div>
              <div class="media-body"><span class="m-0">Ficha de</span>
                <h4 class="mb-0 counter">Procedimento</h4>
                <i class="icon-bg" data-feather="activity"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6 col-xl-3 col-lg-6">
      <%= link_to collective_activity_sheets_path do %>
        <div class="card o-hidden border-0">
          <div class="bg-primary b-r-4 card-body">
            <div class="media static-top-widget">
              <div class="align-self-center text-center"><i data-feather="users"></i></div>
              <div class="media-body"><span class="m-0">Atividade</span>
                <h4 class="mb-0 counter">Coletiva</h4>
                <i class="icon-bg" data-feather="users"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
