<div class="login-card">
  <div class="login-main">
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'theme-form login-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %>
          <div class="input-group"><span class="input-group-text"><i class="icon-email"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: 'Test@gmail.com' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
        </div>
        <p>Already have an password?
          <%= link_to "Log in", new_session_path(resource_name), class: "ms-2" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
