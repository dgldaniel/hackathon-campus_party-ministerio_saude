<div class="tab">
  <div class="col">
    <div class="mb-3">
      <%= form.label :deficienciasCidadao %>
      <%= form.collection_check_boxes :deficienciasCidadao, @options[:deficiencia_cidadao], :second, :first do |b| %>
        <div class="d-block">
          <%= b.label %>
          <%= b.check_box %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col">
    <div class="mb-3">
      <%= form.label :grauInstrucaoCidadao %>
