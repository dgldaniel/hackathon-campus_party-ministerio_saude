  <div class="d-block">
    <%= form.check_box :statusFrequentaBenzedeira %>
    <%= form.label :statusFrequentaBenzedeira %>
  </div>
  <div class="d-block">
    <%= form.check_box :statusFrequentaEscola %>
    <%= form.label :statusFrequentaEscola %>
  </div>
  <div class="d-block">
