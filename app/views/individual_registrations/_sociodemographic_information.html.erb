        <div class="d-block">
          <%= b.radio_button %>
          <%= b.label %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="mb-3">
        <%= form.label :cbo %>
        <%= form.select :cbo, @options[:cbo], {}, { class: 'js-example-basic-single col-sm-12' } %>
      </div>
    </div>
  </div>
