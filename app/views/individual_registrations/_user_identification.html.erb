  </div>
</div>
<div class="row">
  <div class="col">
    <div class="mb-3">
      <%= form.label :cnsCidadao %>
      <%= form.text_field :cnsCidadao, class: 'form-control btn-pill' %>
    </div>
  </div>
</div>
<div class="d-block">
  <%= form.check_box :statusEhResponsavel %>
  <%= form.label :statusEhResponsavel %>
</div>
<div class="row">
  <div class="col">
    <div class="mb-3">
      <%= form.label :cpfResponsavelFamiliar %>
      <%= form.text_field :cpfResponsavelFamiliar, class: 'form-control btn-pill' %>
    </div>
  </div>
</div>
