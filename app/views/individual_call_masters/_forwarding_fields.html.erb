<div class="nested-fields">
  <h3>Encaminhamento</h3>

  <div class="row">
    <div class="col">
      <div class="mb-3">
        <%= f.label :especialidade %>
        <%= f.select :especialidade, @options[:especialidade_encaminhamento], { prompt: "Selecione Especialidade" }, { class: 'js-example-basic-single col-sm-12' } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="mb-3">
        <%= f.label :hipoteseDiagnosticoCid10 %>
        <%= f.text_field :hipoteseDiagnosticoCid10, class: 'form-control btn-pill' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="mb-3">
        <%= f.label :classificacaoRisco %>
        <%= f.collection_radio_buttons :classificacaoRisco, @options[:classificacao_risco], :second, :first do |b| %>
          <div class="d-block">
            <%= b.radio_button %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to_remove_association "remove forwarding", f %>
  <br><br><br>
</div>
